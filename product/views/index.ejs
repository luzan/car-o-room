<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
</head>

<body>
    <%- include('./partials/header'); %>
    <div class="container">
        <section class="vh-100">
            <div class="container-fluid">
              <div class="row">
                <div class="col-sm-6 text-black">
          
                  <div class="px-5 ms-xl-4">
                    <i class="fas fa-car-on fa-3x me-3 pt-4 mt-xl-3" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">MahaCars</span>
                  </div>
          
                  <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          
                    <form action="/" method="post" style="width: 23rem;">
          
                      <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
          
                      <div class="form-outline mb-4">
                        <input type="email" name="username" id="emailAddress" class="form-control form-control-lg" />
                        <label class="form-label" for="emailAddress">Email address</label>
                      </div>
          
                      <div class="form-outline mb-4">
                        <input type="password" name="password" id="password" class="form-control form-control-lg" />
                        <label class="form-label" for="password">Password</label>
                      </div>

                      <div class="form-outline form-check mb-4">
                        <input class="form-check-input" type="checkbox" value="yes" name="remember" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                          Remember Me
                        </label>
                      </div>
        
          
                      <div class="pt-1 mb-4">
                        <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                      </div>
          
                      <p>Don't have an account? <a href="/register" class="link-info">Register here</a></p>
          
                    </form>
          
                  </div>
          
                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                    alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: right;">
                </div>
              </div>
            </div>
          </section>
    </div>
    <%- include('./partials/footer'); %>
</body>

</html>