<!doctype html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <%- include('../partials/header'); %>
    <div class="container">
        <h3>Create new Make</h3>
        <form action="/makes" method="post">
            <div class="mb-3">
              <label for="" class="form-label">Make</label>
              <input type="text"
                class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="Make Name">
              <small id="helpId" class="form-text text-muted">Enter make name, e.g Ford</small>
            </div>

            <div class="mb-3">
              <label for="model1" class="form-label">Model 1</label>
              <input type="text"
                class="form-control" name="model1" id="model1" aria-describedby="helpId" placeholder="Model Name">
              <small id="helpId" class="form-text text-muted">Enter model name</small>
            </div>
            <div class="mb-3">
              <label for="model2" class="form-label">Model 2</label>
              <input type="text"
                class="form-control" name="model2" id="model2" aria-describedby="helpId" placeholder="Model Name">
              <small id="helpId" class="form-text text-muted">Enter model name</small>
            </div>
            <div class="mb-3">
              <label for="model3" class="form-label">Model 3</label>
              <input type="text"
                class="form-control" name="model3" id="model3" aria-describedby="helpId" placeholder="Model Name">
              <small id="helpId" class="form-text text-muted">Enter model name</small>
            </div>
            <div class="mb-3">
              <label for="model4" class="form-label">Model 4</label>
              <input type="text"
                class="form-control" name="model4" id="model4" aria-describedby="helpId" placeholder="Model Name">
              <small id="helpId" class="form-text text-muted">Enter model name</small>
            </div>
            <input class="btn btn-primary btn-lg" type="submit" value="Save">
        </form>
    </div>
    

    <%- include('../partials/footer'); %>
</body>

</html>